* {
  margin: 0;
  padding: 0;
  list-style: none;
  outline: none !important;
  text-decoration: none;
}

html,
body {
  width: 100%;
  height: 100%;
}

/*#Region General Main*/
.mainwrapper {
  width: 100%;
  background-color: #f2f5f7;
  /*font-family: {{ settings.content_font.family }}
  , {{ settings.content_font.fallback_families }}
  ;*/
  font-family: 'Poppins', sans-serif;
  font-weight: 400;
  line-height: 26px;
  font-size: 16px;
}

main {
  width: 1210px;
  margin: 0 auto;
  padding: 20px 0;
}
/*#EndRegion General Main*/

/*#Region Company Details*/
.saleimage {
  width: 100%;
}

.bghomepage {
  display: flex;
  align-items: center;
  position: relative;
  left: 0;
  height: 300px;
  margin-top: -55px;
  z-index: 0;
  width: 100%;
  background-image: url('{{ 'bg-homepage.webp' | asset_url }}');
  background-size: cover;
  background-position: center center;
}

.bgoverlay {
  background-color: #3d4246;
  opacity: 0.4;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
}

.company-info {
  position: relative;
  z-index: 1;
  width: 1210px;
  margin: 0 auto;
  color: white;
  padding: 0 15px;
}

.c-details-item {
  list-style-type: none;
}
.company-number a {
  text-decoration: none;
}

.details-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 0.5rem;
  line-height: 1.1;
}

.details-subtitle {
  font-family: Prompt, sans-serif;
  text-shadow: 0 0 4px rgb(0 0 0 / 40%);
  margin: auto 0;
}
.company-number {
  display: flex;
  margin-top: 20px;
}

/*#EndRegion Company Details*/

/*#Region Link Buttons*/
.orangebtn {
  background: #f26101;
  text-transform: capitalilze;
  letter-spacing: 0;
  padding: 8px 50px;
  line-height: 20px;
  font-weight: 700;
  border: 2px solid #f26101;
  border-radius: 2px;
  transition: all 0.2s ease-in-out;
}

.callbtn {
  color: #3b3b3b;
}
.callbtn:hover {
  color: #fff;
  background-color: #bf4d01;
  border: 2px solid #bf4d01;
}

.shopbtn {
  display: block;
  text-align: center;
  color: #fff;
  width: 150px;
}
.shopbtn:hover {
  background-color: #bf4d01;
  border: 2px solid #bf4d01;
}

.collbtn {
  padding: 5px;
  color: #fff;
  display: inline-block;
  box-sizing: border-box;
  width: 100%;
  text-align: center;
}

.collbtn:hover {
  background-color: #bf4d01;
  border: 2px solid #bf4d01;
}
/*#EndRegion Link Buttons*/

/*#Region Promotion List*/
.promotion_list {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 32px 30px;
  box-shadow: 0 0 1px #0003;
  border-radius: 5px 5px 0 0;
  -webkit-border-radius: 5px 5px 0 0;
  -moz-border-radius: 5px 5px 0 0;
  margin-top: -69px;
}
.promoelement_wrapper {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.promelement_icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  background: #00344e;
  text-align: center;
  line-height: 36px;
}
.promelement_text {
  padding-left: 15px;
  font-size: 12px;
  line-height: 17px;
  font-weight: 500;
  color: {{ settings.blueish }}
  ;
}
.promelement_text h4 {
  font-size: 14px;
}

.collectionbg,
.collectionbgoverlay {
  border-radius: 0 0 5px 5px;
}

.collectionbg {
  padding: 0 30px 0 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background-image: url('{{ 'homepageboatbg.webp' | asset_url }}');
  background-size: cover;
  background-position: center center;
  height: 800px;
  color: #fff;
  width: calc(100% - 80px);
}

.collectionbgoverlay {
  background-color: #000;
  opacity: 0.5;
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
}

.collection_shop,
.allcollcontainer {
  position: relative;
  z-index: 2;
}

.collection_shop {
  width: 40%;
  margin-top: 18%;
}

.collectiontextcontainer h2 {
  font-size: 32px;
  line-height: 40px;
  margin-bottom: 5px;
  font-weight: 600;
}

.collectiontextcontainer p {
  font-size: 16px;
  line-height: 20px;
  font-weight: 400;
  margin-bottom: 15px;
}

.allcollcontainer {
  align-self: flex-start;
  width: 60%;
  height: 100%;
}

.allcollwrapper {
  padding: 14px 0 0 80px;
}

.allcollections {
  padding: 12px 0 0 8px;
  width: 100%;
  display: grid;
  grid-template-columns: repeat(2, 50%);
}

.collcontainer {
  padding: 0 9.5px;
}
.collwrapper {
  border-radius: 5px;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  width: 100%;
  float: left;
  background: #fff;
  padding: 15px;
  box-shadow: 0 0 2px #0003;
  position: relative;
  box-sizing: border-box;
}

.collection {
  position: relative;
  height: 100%;
}

.collectiontitle {
  margin-top: 30px;
}

.colltitle {
  font-size: 16px;
  font-weight: 600;
  color: #3b3b3b;
}

.collectiondetails {
  color: #3b3b3b;
}

.collectionlink {
  width: 100%;
  position: absolute;
  bottom: 0;
}
/*#EndRegion Promotion List*/