/*#Region CollectionPage*/
.sale50off,
.sale50off img {
  width: 100%;
}

.collheadwrapper {
  background-color: #00344e;
  margin-top: 25px;
}

.collheadwrapper {
  width: 100%;
  padding: 8px 30px;
  box-sizing: border-box;
}

.collheader {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.titletext {
  padding-left: 13px;
  position: relative;
  color: #fff;
  font-size: 23px;
  line-height: 30px;
  text-transform: capitalize;
}

.titletext:after {
  position: absolute;
  content: "";
  width: 5px;
  height: 100%;
  background: #ffcd3a;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.titletext p {
  font-weight: 700;
  font-size: 14px;
}

.backtosearch {
  align-self: flex-start;
  text-align: right;
  font-size: 12px;
  font-style: italic;
}

.backtosearch a {
  color: #fff;
}

.maincontainer {
  width: 100%;
}
/*#EndRegion CollectionPage*/

/*#Region Product-Item*/

.product-container {
  background-color: white;
  width: 100%;
  margin: 25px 0;
  padding: 25px 0;
  border-radius: 25px;
  box-sizing: border-box;
  box-shadow: 0 0 10px 1px rgba(0, 0, 0, 40%);
}

.product-wrapper {
  width: 75%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  gap: 7%;
}
/*#EndRegion Product-Item*/

/*#Region Product Images*/
.displayed-image,
.displayed-image img,
.imgbutton,
.imgbutton img {
  border-radius: 50%;
  cursor: pointer;
}

.displayed-image {
  margin-bottom: 25px;
}

.imgselector {
  display: flex;
  gap: 5px;
  justify-content: center;
  align-items: center;
}

.prodimgcurrent {
  transition: opacity 0.3s ease-in-out;
}
.image-fade-out {
  opacity: 0;
}

/*#EndRegion Product Images*/

/*#Region Product Details*/
.product-details {
  color: #00344e;
  padding-top: 5px;
}

.product-Subheader {
  font-size: 14px;
  text-transform: uppercase;
  line-height: 30px;
}

.product-details a {
  color: #00344e;
}

.product-details h3 {
  font-size: 56px;
  font-weight: 700;
  line-height: 0.95;
}

.prod-price-rating {
  color: #f26101;
  padding-top: 3px;
}

.prod-shipment {
  font-size: 13px;
  display: flex;
  margin-top: 25px;
  width: 90%;
}

.prod-shipment p {
  line-height: 1.3;
}

.shipping-details {
  flex-grow: 1;
  padding: 5px 0;
  box-shadow: 0 -2px 0 0 #ccc inset, 0 2px 0 0 #ccc inset;
}

.shippingtime {
  text-transform: capitalize;
}

.prod-to-cart button {
  color: #fff;
  padding: 23px 50px;
  text-transform: uppercase;
  border: none;
  background: #fbcc25;
}

.regularprice span {
  text-decoration: line-through;
}

.prod-comments-wrapper {
  margin: 7% 10% 0 5%;
}

.commentcontainer,
.commentauthorcontainer {
  overflow: auto;
  scroll-snap-type: x mandatory;
}

.commentauthorcontainer::-webkit-scrollbar,
.commentcontainer::-webkit-scrollbar {
  display: none;
}

.commentwrapper,
.commentauthorwrapper {
  display: flex;
}

.comment,
.commentauthor {
  width: 100%;
  scroll-snap-align: center;
}

.comment p {
  font-size: 12px;
  font-style: italic;
  line-height: 1.5;
  color: #888;
}

.author-slidebtns {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15px;
}

.authors {
  width: 30%;
  position: relative;
}

.authors:after {
  position: absolute;
  content: "";
  height: 3px;
  width: 25%;
  background: #f26101;
  left: 5%;
  top: -50%;
}


.commentauthor {
  display: flex;
  justify-content: start;
}

.commentauthor p {
  font-size: 12px;
  font-weight: 700;
}

.authorimg {
  margin: 0 7px;
  height: 100%;
  width: 26px;
  background-color: #444;
  border-radius: 50%;
  border: 2px solid #f26101;
  box-sizing: border-box;
}

.slidebtns {
  padding-right: 20px;
  display: flex;
  gap: 10%;
}

.slidebtns > div {
  cursor: pointer;
}



/*#EndRegion Product Details*/