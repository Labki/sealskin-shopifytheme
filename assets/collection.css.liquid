/*#Region CollectionPage*/
.sale50off,
.sale50off img {
  width: 100%;
}

.collheadwrapper {
  background-color: #00344e;
  margin-top: 25px;
}

.collheadwrapper {
  width: 100%;
  padding: 8px 30px;
  box-sizing: border-box;
}

.collheader {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.titletext {
  padding-left: 13px;
  position: relative;
  color: #fff;
  font-size: 23px;
  line-height: 30px;
  text-transform: capitalize;
}

.titletext:after {
  position: absolute;
  content: "";
  width: 5px;
  height: 100%;
  background: #ffcd3a;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.titletext p {
  font-weight: 700;
  font-size: 14px;
}

.backtosearch {
  align-self: flex-start;
  text-align: right;
  font-size: 12px;
  font-style: italic;
}

.backtosearch a {
  color: #fff;
}

.maincontainer {
  width: 100%;
}
/*#EndRegion CollectionPage*/

/*#Region Product-Item*/

.product-container {
  width: 100%;
  padding: 50px 0 50px 50px;
  box-sizing: border-box;
}

.product-wrapper {
  width: 70%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  gap: 7%;
}
/*#EndRegion Product-Item*/
.displayed-image,
.displayed-image img,
.imgbutton,
.imgbutton img {
  border-radius: 50%;
  cursor: pointer;
}

.displayed-image {
  margin-bottom: 25px;

}

.imgselector {
  display: flex;
  gap: 5px;
  justify-content: center;
  align-items: center;
}

.imgbutton {}
/*#Region Product Images*/

/*#EndRegion Product Images*/

/*#Region Product Details*/
.product-details {
  color: #00344e;
}

.product-Subheader {
  font-size: 14px;
  text-transform: uppercase;
  line-height: 30px;
}

.product-details a {
  color: #00344e;
}

.product-details h3 {
  font-size: 56px;
  font-weight: 700;
}
/*#EndRegion Product Details*/