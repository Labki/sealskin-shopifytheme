/*#Region CollectionPage*/
.sale50off,
.sale50off img {
  width: 100%;
}

.collheadwrapper {
  background-color: #00344e;
  margin-top: 25px;
}

.collheadwrapper {
  width: 100%;
  padding: 8px 30px;
  box-sizing: border-box;
}

.collheader {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.titletext {
  padding-left: 13px;
  position: relative;
  color: #fff;
  font-size: 23px;
  line-height: 30px;
  text-transform: capitalize;
}

.titletext:after {
  position: absolute;
  content: "";
  width: 5px;
  height: 100%;
  background: #ffcd3a;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.titletext p {
  font-weight: 700;
  font-size: 14px;
}

.backtosearch {
  align-self: flex-start;
  text-align: right;
  font-size: 12px;
  font-style: italic;
}

.backtosearch a {
  color: #fff;
}

.maincontainer {
  width: 100%;
}
/*#EndRegion CollectionPage*/

/*#Region Product-Item*/

.product-container {
  width: 100%;
  padding: 50px 0;
  box-sizing: border-box;
}

.product-wrapper {
  width: 75%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  gap: 7%;
}
/*#EndRegion Product-Item*/

/*#Region Product Images*/
.displayed-image,
.displayed-image img,
.imgbutton,
.imgbutton img {
  border-radius: 50%;
  cursor: pointer;
}

.displayed-image {
  margin-bottom: 25px;
}

.imgselector {
  display: flex;
  gap: 5px;
  justify-content: center;
  align-items: center;
}

#prodimgcurrent {
  transition: opacity 0.3s ease-in-out;
}
.image-fade-out {
  opacity: 0;
}

/*#EndRegion Product Images*/

/*#Region Product Details*/
.product-details {
  color: #00344e;
  padding-top: 5px;
}

.product-Subheader {
  font-size: 14px;
  text-transform: uppercase;
  line-height: 30px;
}

.product-details a {
  color: #00344e;
}

.product-details h3 {
  font-size: 56px;
  font-weight: 700;
  line-height: 0.95;
}

.prod-price-rating {
  color: #f26101;
  padding-top: 3px;
}

.prod-shipment {
  font-size: 13px;
  display: flex;
  margin-top: 25px;
  width: 90%;
}

.prod-shipment p {
  line-height: 1.43;
}

.shipping-details {
  flex-grow: 1;
  padding: 10px 0;
  box-shadow: 0 -2px 0 0 #ccc inset, 0 2px 0 0 #ccc inset;
}

.shippingtime {
  text-transform: capitalize;
}

.prod-to-cart button {
  color: #fff;
  padding: 30px 50px;
  text-transform: uppercase;
  border: none;
  background: #fbcc25;
}

.regularprice span {
  text-decoration: line-through;
}

#commentcontainer {
  overflow: auto;
}

#commentwrapper {
  display: flex;
}

.comment {
  width: 100%;
}

/*#EndRegion Product Details*/