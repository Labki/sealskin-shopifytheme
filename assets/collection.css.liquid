.sale50off,
.sale50off img {
  width: 100%;
}

.collheadwrapper {
  background-color: #00344e;
  margin-top: 25px;
}

.collheadwrapper {
  width: 100%;
  padding: 8px 30px;
  box-sizing: border-box;
}

.collheader {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.titletext {
  padding-left: 13px;
  position: relative;
  color: #fff;
  font-size: 23px;
  line-height: 30px;
  text-transform: capitalize;
}

.titletext:after {
  position: absolute;
  content: "";
  width: 5px;
  height: 100%;
  background: #ffcd3a;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.titletext p {
  font-weight: 700;
  font-size: 14px;
}

.backtosearch {
  align-self: flex-start;
  text-align: right;
  font-size: 12px;
  font-style: italic;
}

.backtosearch a {
  color: #fff;
}

.maincontainer {
  width: 100%;
}